{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "bin"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {}
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentSize": 2,
    "indentStyle": "space"
  }
}