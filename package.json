{
  "name": "@xeajs/electron",
  "version": "3.0.0",
  "productName": "Xeajs Electron Scheme",
  "main": "dist/server.js",
  "license": "MIT",
  "author": {
    "name": "xeajs",
    "email": "yejiang1015@gmail.com",
    "url": "https://github.com/xeajs/electron"
  },
  "scripts": {
    "dev": "pnpm run start:dev",
    "start": "pnpm run start:dev",
    "build": "pnpm run build:prod",
    "start:dev": "appup --mode dev",
    "start:prod": "appup --mode prod",
    "build:dev": "appup build --mode dev",
    "build:prod": "appup build --mode prod",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@koa/router": "12.0.0",
    "antd": "5.1.7",
    "axios": "1.3.2",
    "classnames": "2.3.2",
    "dayjs": "1.11.7",
    "fs-extra": "11.1.0",
    "koa": "2.14.1",
    "lodash-es": "4.17.21",
    "mitt": "3.0.0",
    "nanoid": "4.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-if": "4.1.4",
    "react-router-dom": "6.8.1",
    "zustand": "4.3.2"
  },
  "devDependencies": {
    "-_-": "link:scripts",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@jgoz/esbuild-plugin-typecheck": "3.0.1",
    "@types/fs-extra": "11.0.1",
    "@types/koa": "2.13.5",
    "@types/koa__router": "12.0.0",
    "@types/lodash-es": "4.17.6",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "@vitejs/plugin-react-swc": "3.1.0",
    "cac": "6.7.14",
    "electron": "23.0.0",
    "esbuild": "0.17.6",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.1",
    "nodemon": "2.0.20",
    "prettier": "2.8.4",
    "typescript": "4.9.5",
    "vite": "4.1.1",
    "vite-plugin-checker": "0.5.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7"
  },
  "lint-staged": {
    "src/**/*.less": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --color --fix"
    ]
  },
  "window": {
    "center": true,
    "title": "XeaJS ECS",
    "show": false,
    "width": 960,
    "height": 640,
    "minWidth": 960,
    "minHeight": 640,
    "frame": false,
    "webPreferences": {
      "webSecurity": false,
      "enableRemoteModule": true,
      "nodeIntegration": true
    }
  }
}
