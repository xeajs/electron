{
  "name": "@xeajs/electron",
  "version": "3.0.0",
  "main": "dist/main/index.js",
  "license": "MIT",
  "author": {
    "name": "xeajs",
    "email": "yejiang1015@gmail.com",
    "url": "https://github.com/xeajs/electron"
  },
  "scripts": {
    "start": "npm run start:dev",
    "build": "npm run build:prod",
    "start:dev": "tsx bin --mode dev",
    "start:prod": "tsx bin --mode prod",
    "build:dev": "tsx bin build --mode dev",
    "build:prod": "tsx bin build --mode prod",
    "builder": "electron-builder",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "prefix": "rome format src --write",
    "fix": "rome check src",
    "postfix": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "@koa/router": "12.0.0",
    "address": "1.2.2",
    "antd": "5.6.1",
    "axios": "1.3.2",
    "classnames": "2.3.2",
    "dayjs": "1.11.7",
    "detect-port": "1.5.1",
    "fs-extra": "11.1.0",
    "jsonwebtoken": "9.0.0",
    "koa": "2.14.1",
    "koa-static": "5.0.0",
    "less": "4.1.3",
    "lodash-es": "4.17.21",
    "mitt": "3.0.0",
    "nanoid": "4.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-if": "4.1.4",
    "react-router-dom": "6.8.1",
    "socket.io": "4.6.2",
    "zustand": "4.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@jgoz/esbuild-plugin-typecheck": "3.0.1",
    "@types/fs-extra": "11.0.1",
    "@types/koa": "2.13.5",
    "@types/koa-static": "4.0.2",
    "@types/koa__router": "12.0.0",
    "@types/lodash-es": "4.17.6",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@vitejs/plugin-react-swc": "3.1.0",
    "cac": "6.7.14",
    "dotenv": "16.0.3",
    "electron": "23.0.0",
    "electron-builder": "23.6.0",
    "esbuild": "0.17.6",
    "esbuild-plugin-alias": "0.2.1",
    "fast-glob": "3.2.12",
    "husky": "8.0.3",
    "json5": "2.2.3",
    "lint-staged": "13.1.1",
    "nodemon": "2.0.20",
    "prettier": "2.8.4",
    "rome": "12.1.3",
    "tsx": "^3.12.7",
    "typescript": "4.9.5",
    "vite": "4.1.1",
    "vite-plugin-checker": "0.5.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7"
  },
  "lint-staged": {
    "src/**/*.less": [
      "prettier --write"
    ],
    "*.(ts|tsx)": [
      "npm run fix"
    ]
  }
}